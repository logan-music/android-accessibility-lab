<?xml version="1.0" encoding="utf-8"?>
<!--
  android/app/src/main/res/xml/accessibility_config.xml

  Pro-level AccessibilityService configuration for lab/demo.
  NOTES:
  - Keep this file synced with AndroidManifest meta-data: android:resource="@xml/accessibility_config"
  - For extra safety in real deployments, add android:packageNames to restrict which apps your service can observe.
-->
<accessibility-service xmlns:android="http://schemas.android.com/apk/res/android"

    <!-- Listen to the most relevant events for automation -->
    android:accessibilityEventTypes="typeWindowStateChanged|typeWindowContentChanged|typeViewClicked|typeViewFocused|typeViewTextChanged"

    <!-- Generic feedback type -->
    android:accessibilityFeedbackType="feedbackGeneric"

    <!-- Small debounce for events (milliseconds) -->
    android:notificationTimeout="100"

    <!-- Required: allow reading view hierarchy (needed to find/click nodes) -->
    android:canRetrieveWindowContent="true"

    <!-- Allow performing gestures (dispatchGesture) on API 24+ -->
    android:canPerformGestures="true"

    <!-- Flags: include not important views so we can target more UI elements.
         Keep flags conservative; do NOT add flagRequestFilterKeyEvents unless you intentionally need keyboard events. -->
    android:accessibilityFlags="flagDefault|flagIncludeNotImportantViews"

    <!-- Optional: if you want to restrict the service to specific packages add:
         android:packageNames="com.example.targetapp,com.android.settings"
         For the lab demo you can omit packageNames to allow testing across apps.
    -->

    <!-- Provide a short description resource (add string to res/values/strings.xml) -->
    android:description="@string/accessibility_service_description" />